@using System.Linq
@model IEnumerable<Biblioteca.Models.Reservation>
@{
    ViewData["Title"] = "As minhas reservas";
    var readerName = ViewData["ReaderName"] as string ?? "";
}

<h1>As minhas reservas</h1>
<p>
    <a asp-action="CreateForReader" class="btn btn-primary">Nova reserva</a>
</p>
@if (!string.IsNullOrEmpty(readerName))
{
    <p>Reservas associadas a <strong>@readerName</strong>.</p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Ainda não existem reservas registadas.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Livro</th>
                <th>Data de início</th>
                <th>Data de fim</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book?.Title</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.EndDate?.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        @if (item.Status != Biblioteca.Models.ReservationStatus.Cancelled && item.Status != Biblioteca.Models.ReservationStatus.Completed)
                        {
                            <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link p-0 ms-2">Cancelar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
