@model ErrorViewModel
@{
    Layout = "_ErrorLayout";
    ViewData["Title"] = Model.Title;
}

<div class="mb-4">
    <h1 class="display-5 fw-bold text-danger mb-3">@Model.Title</h1>
    <p class="lead mb-0">@Model.Message</p>
</div>

@if (Model.StatusCode.HasValue)
{
    <p class="text-muted">Código do erro: <strong>@Model.StatusCode</strong></p>
}

@if (Model.ShowRequestId)
{
    <p class="text-muted">Identificador do pedido: <code>@Model.RequestId</code></p>
}