@{
    ViewData["Title"] = "Recuperação iniciada";
    var resetLink = ViewData["ResetLink"] as string;
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<p>Se o email existir no sistema receberá instruções para redefinir a password.</p>
@if (!string.IsNullOrEmpty(resetLink))
{
    <div class="alert alert-info" role="alert">
        Para ambiente de testes utilize este <a href="@resetLink">link de redefinição de password</a>.
    </div>
}
<p><a asp-action="Login">Voltar ao login</a></p>