@model Biblioteca.Models.ReaderViewModels.ReaderInputModel
@{
    ViewData["Title"] = "Detalhes do leitor";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReaderCode)</dt>
            <dd class="col-sm-9">@Model.ReaderCode</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BirthDate)</dt>
            <dd class="col-sm-9">@Model.BirthDate?.ToString("d")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProfileImageUrl)</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileImageUrl))
                {
                    <a href="@Model.ProfileImageUrl" target="_blank" rel="noopener">@Model.ProfileImageUrl</a>
                }
                else
                {
                    <span class="text-muted">Sem informação</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Voltar à lista</a>
    @if (User.IsInRole(RoleNames.Administrator) || User.IsInRole(RoleNames.Staff))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    }
</div>